{
  "manifest_version": 2,
  "name": "Markdown Renderer",
  "version": "1.0.2",
  "description": "Renders markdown files with GitHub-style dark theme and syntax highlighting",
  "browser_specific_settings": {
    "gecko": {
      "id": "markdown-renderer@lukas.dev",
      "data_collection_permissions": { "required": ["none"] }
    }
  },
  "permissions": ["file:///*"],
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["dist/content.js"],
      "css": ["dist/styles.css"],
      "run_at": "document_end"
    }
  ]
}
